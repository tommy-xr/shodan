{
  "name": "robomesh",
  "version": "0.1.0",
  "private": true,
  "description": "AI Agentic Orchestration Tool",
  "bin": {
    "robomesh": "packages/cli/dist/index.js"
  },
  "scripts": {
    "dev": "concurrently -n server,designer -c blue,magenta \"pnpm run -F @robomesh/server dev\" \"pnpm run -F @robomesh/designer dev\"",
    "build": "pnpm run -F @robomesh/core build && pnpm run -F @robomesh/server build && pnpm run -F @robomesh/designer build && pnpm run -F @robomesh/cli build",
    "start": "pnpm run -F @robomesh/server start",
    "robomesh": "pnpm run -F @robomesh/cli robomesh",
    "test:workflows": "pnpm run -F @robomesh/server test:workflows",
    "test:cli": "pnpm run -F @robomesh/cli test",
    "test:e2e": "playwright test",
    "generate:screenshot": "pnpm exec tsx scripts/generate-screenshot.ts"
  },
  "workspaces": [
    "packages/core",
    "packages/server",
    "packages/designer",
    "packages/cli",
    "packages/migrations"
  ],
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "concurrently": "^9.1.0",
    "playwright": "^1.57.0",
    "tsx": "^4.21.0",
    "wait-on": "^9.0.3"
  }
}

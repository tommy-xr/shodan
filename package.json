{
  "name": "shodan",
  "version": "0.1.0",
  "private": true,
  "description": "AI Agentic Orchestration Tool",
  "bin": {
    "shodan": "server/dist/cli.js"
  },
  "scripts": {
    "dev": "concurrently -n server,designer -c blue,magenta \"npm run dev -w server\" \"npm run dev -w designer\"",
    "build": "npm run build -w server && npm run build -w designer",
    "start": "npm run start -w server",
    "shodan": "npm run shodan -w server --",
    "test:workflows": "npm run test:workflows -w server"
  },
  "workspaces": [
    "server",
    "designer"
  ],
  "devDependencies": {
    "concurrently": "^9.1.0"
  }
}

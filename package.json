{
  "name": "shodan",
  "version": "0.1.0",
  "private": true,
  "description": "AI Agentic Orchestration Tool",
  "bin": {
    "shodan": "server/dist/cli.js"
  },
  "scripts": {
    "dev": "concurrently -n server,designer -c blue,magenta \"pnpm run -F server dev\" \"pnpm run -F designer dev\"",
    "build": "pnpm run -F server build && pnpm run -F designer build",
    "start": "pnpm run -F server start",
    "shodan": "pnpm run -F server shodan --",
    "test:workflows": "pnpm run -F server test:workflows"
  },
  "workspaces": [
    "server",
    "designer"
  ],
  "devDependencies": {
    "concurrently": "^9.1.0"
  }
}
